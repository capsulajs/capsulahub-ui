{
  "name": "@capsulajs/capsulahub-ui",
  "version": "0.0.1",
  "description": "CapsulaJS UI component library",
  "main": "./lib/index.js",
  "private": false,
  "scripts": {
    "start": "parcel src/docs/index.html",
    "rm:lib": "rimraf lib",
    "build:commonjs": "parcel build src/components/index.js --target commonjs --out-dir lib",
    "build": "yarn rm:lib && yarn build:commonjs",
    "lint": "eslint src/components/**/**",
    "lint:fix": "yarn lint --fix",
    "prettier": "prettier --write '{src,tests}/**/*.{js,jsx}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "react": "^0.14.0 || ^15.0.0 || ^16.0.0",
    "react-ace": "^6.1.4",
    "react-beautiful-dnd": "^9.0.2",
    "react-click-outside": "^3.0.1",
    "react-dom": "^0.14.0 || ^15.0.0 || ^16.0.0",
    "react-json-view": "^1.19.1",
    "react-reflex": "^2.2.9",
    "rxjs": "^6.3.3",
    "styled-components": "^3.4.5",
    "typeface-montserrat": "^0.0.54"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "codacy-coverage": "^3.4.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "parcel-bundler": "^1.11.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "rimraf": "^2.6.3"
  }
}
