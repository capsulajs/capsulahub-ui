{
  "name": "@capsulajs/capsulahub-ui",
  "version": "0.1.5",
  "description": "CapsulaJS UI component library",
  "main": "./lib/index.js",
  "private": false,
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "rimraf lib && cross-env BABEL_ENV=commonjs babel src --out-dir lib --copy-files",
    "lint": "eslint src/components/**",
    "lint:fix": "yarn lint --fix",
    "prettier": "prettier --write '{src,tests}/**/*.{js,jsx}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "json-literal": "^1.1.0",
    "lodash": "^4.17.11",
    "react": "^16.8.1",
    "react-ace": "^6.1.4",
    "react-beautiful-dnd": "^10.1.0",
    "react-click-outside": "^3.0.1",
    "react-json-view": "^1.19.1",
    "react-reflex": "^2.2.9",
    "rxjs": "^6.3.3",
    "styled-components": "^3.4.5",
    "typeface-montserrat": "^0.0.54"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^4.1.13",
    "@storybook/addon-links": "^4.1.13",
    "@storybook/addons": "^4.1.13",
    "@storybook/react": "^4.1.13",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "codacy-coverage": "^3.4.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "rimraf": "^2.6.3"
  }
}
